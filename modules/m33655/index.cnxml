                        <m:mi>i</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>c</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>a</m:mi>
                        <m:mi>f</m:mi>
                        <m:mi>t</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mrow>
                        <m:mi>s</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>u</m:mi>
                        <m:mi>n</m:mi>
                        <m:mi>d</m:mi>
                      </m:mrow>
                    </m:msub>
                  </m:mfrac>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mi> Mach </m:mi>
                    <m:mspace width="4pt"/>
                    <m:mi> Number </m:mi>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mfrac>
                    <m:mrow>
                      <m:mn>361</m:mn>
                      <m:mo>.</m:mo>
                      <m:mn>1</m:mn>
                    </m:mrow>
                    <m:mn>340</m:mn>
                  </m:mfrac>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mi> Mach </m:mi>
                    <m:mspace width="4pt"/>
                    <m:mi> Number </m:mi>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
