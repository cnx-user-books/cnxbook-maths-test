                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mfrac>
                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mrow>
                        <m:mi>s</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>u</m:mi>
                        <m:mi>n</m:mi>
                        <m:mi>d</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mrow>
                        <m:mi>a</m:mi>
                        <m:mi>i</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>c</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>a</m:mi>
                        <m:mi>f</m:mi>
                        <m:mi>t</m:mi>
                      </m:mrow>
                    </m:msub>
                  </m:mfrac>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mrow>
                        <m:mi>a</m:mi>
                        <m:mi>i</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>c</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>a</m:mi>
                        <m:mi>f</m:mi>
                        <m:mi>t</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:mo form="prefix">sin</m:mo>
                    <m:mi>θ</m:mi>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:msub>
                    <m:mi>v</m:mi>
                    <m:mrow>
                      <m:mi>s</m:mi>
                      <m:mi>o</m:mi>
                      <m:mi>u</m:mi>
                      <m:mi>n</m:mi>
                      <m:mi>d</m:mi>
                    </m:mrow>
                  </m:msub>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mrow>
                        <m:mi>s</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>u</m:mi>
                        <m:mi>r</m:mi>
                        <m:mi>c</m:mi>
                        <m:mi>e</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:mo form="prefix">sin</m:mo>
                    <m:mi>θ</m:mi>
