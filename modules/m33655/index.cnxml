                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mn>1300</m:mn>
                    <m:msup>
                      <m:mrow>
                        <m:mi> km </m:mi>
                        <m:mo>·</m:mo>
                        <m:mi mathvariant="normal">h</m:mi>
                      </m:mrow>
                      <m:mrow>
                        <m:mo>-</m:mo>
                        <m:mn>1</m:mn>
                      </m:mrow>
                    </m:msup>
                  </m:mrow>
