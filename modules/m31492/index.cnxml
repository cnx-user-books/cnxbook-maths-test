                      <m:mo>(</m:mo>
                      <m:mn>6</m:mn>
                      <m:mo>,</m:mo>
                      <m:mn>67</m:mn>
                      <m:mo>×</m:mo>
                      <m:msup>
                        <m:mn>10</m:mn>
                        <m:mrow>
                          <m:mo>-</m:mo>
                          <m:mn>11</m:mn>
                        </m:mrow>
                      </m:msup>
                      <m:mspace width="0.166667em"/>
                      <m:mi mathvariant="normal">N</m:mi>
