                  <m:mtd>
                    <m:mo>=</m:mo>
                  </m:mtd>
                  <m:mtd columnalign="left">
                    <m:mfrac>
                      <m:mi>R</m:mi>
                      <m:mn>312</m:mn>
                    </m:mfrac>
                  </m:mtd>
                </m:mtr>
                <m:mtr>
                  <m:mtd columnalign="right">
                    <m:mi>R</m:mi>
                  </m:mtd>
                  <m:mtd>
                    <m:mo>=</m:mo>
                  </m:mtd>
                  <m:mtd columnalign="left">
                    <m:mrow>
                      <m:mi> tan </m:mi>
                      <m:mspace width="3.33333pt"/>
                      <m:msup>
                        <m:mn>55</m:mn>
                        <m:mo>∘</m:mo>
                      </m:msup>
                      <m:mo>×</m:mo>
                      <m:mn>312</m:mn>
                    </m:mrow>
                  </m:mtd>
                </m:mtr>
                <m:mtr>
                  <m:mtd columnalign="right">
