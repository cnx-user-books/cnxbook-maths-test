                        <m:msup>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mn>1</m:mn>
                            <m:mi mathvariant="normal">m</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
