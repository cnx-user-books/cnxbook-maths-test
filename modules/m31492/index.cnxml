                        <m:mi mathvariant="normal">m</m:mi>
                        <m:mn>2</m:mn>
                      </m:msup>
                      <m:mo>·</m:mo>
                      <m:mspace width="3.33333pt"/>
                      <m:msup>
                        <m:mi> kg </m:mi>
                        <m:mrow>
                          <m:mo>-</m:mo>
                          <m:mn>2</m:mn>
                        </m:mrow>
                      </m:msup>
                      <m:mo>)</m:mo>
                    </m:mrow>
                    <m:mrow>
                      <m:mo>(</m:mo>
                      <m:mfrac>
                        <m:mrow>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mn>5</m:mn>
                            <m:mo>,</m:mo>
                            <m:mn>98</m:mn>
                            <m:mo>×</m:mo>
                            <m:msup>
                              <m:mn>10</m:mn>
                              <m:mn>24</m:mn>
                            </m:msup>
                            <m:mi> kg </m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mn>7</m:mn>
                            <m:mo>,</m:mo>
                            <m:mn>35</m:mn>
                            <m:mo>×</m:mo>
                            <m:msup>
                              <m:mn>10</m:mn>
