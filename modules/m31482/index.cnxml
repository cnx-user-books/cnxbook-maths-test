            </media>
          </figure>
        </para>
        <equation id="id68729">
          <m:math overflow="scroll" mode="display">
            <m:mtable displaystyle="true">
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:msub>
                    <m:mi>U</m:mi>
                    <m:mrow>
                      <m:mi>t</m:mi>
                      <m:mi>o</m:mi>
                      <m:mi>p</m:mi>
                    </m:mrow>
                  </m:msub>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:msub>
                    <m:mi>U</m:mi>
                    <m:mrow>
                      <m:mi>b</m:mi>
                      <m:mi>o</m:mi>
                      <m:mi>t</m:mi>
                      <m:mi>t</m:mi>
                      <m:mi>o</m:mi>
                      <m:mi>m</m:mi>
                    </m:mrow>
                  </m:msub>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mi>P</m:mi>
                    <m:msub>
                      <m:mi>E</m:mi>
                      <m:mrow>
                        <m:mi>t</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>p</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:mo>+</m:mo>
                    <m:mi>K</m:mi>
                    <m:msub>
                      <m:mi>E</m:mi>
                      <m:mrow>
                        <m:mi>t</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>p</m:mi>
                      </m:mrow>
                    </m:msub>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:mi>P</m:mi>
                    <m:msub>
                      <m:mi>E</m:mi>
                      <m:mrow>
                        <m:mi>b</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>t</m:mi>
                        <m:mi>t</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>m</m:mi>
                      </m:mrow>
                    </m:msub>
                    <m:mo>+</m:mo>
                    <m:mi>K</m:mi>
                    <m:msub>
                      <m:mi>E</m:mi>
                      <m:mrow>
                        <m:mi>b</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>t</m:mi>
                        <m:mi>t</m:mi>
                        <m:mi>o</m:mi>
                        <m:mi>m</m:mi>
                      </m:mrow>
                    </m:msub>
                  </m:mrow>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mi>m</m:mi>
                    <m:mi>g</m:mi>
                    <m:mi>h</m:mi>
                    <m:mo>+</m:mo>
                    <m:mfrac>
